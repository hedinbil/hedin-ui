@attribute [Route(PageRoute.NavMenuHorizontal)]
@attribute [Route(PageRoute.NavMenuHorizontal + "/{Tab}")]
@attribute [HUIPageSettings("NavMenu Horizontal")]

<div class="mb-3">
    <CascadingValue Value="@Tab">
        <DemoPageLayout TItem="NavMenuHorizontal" HUIComponent="typeof(HUINavMenuHorizontal)">
            <DemoExample ComponentType="typeof(Hedin.UI.Demo.Pages.Components.NavMenu.NavMenuHorizontal.Examples.Default)" />
            <DemoExample ComponentType="typeof(Hedin.UI.Demo.Pages.Components.NavMenu.NavMenuHorizontal.Examples.WithCustomContent)">
                <MudText>Custom tab content</MudText>
            </DemoExample>
            <DemoExample ComponentType="typeof(Hedin.UI.Demo.Pages.Components.NavMenu.NavMenuHorizontal.Examples.Dynamic)" />
        </DemoPageLayout>
    </CascadingValue>
</div>
@code {
    [Parameter] public string Tab { get; set; } = string.Empty;
}