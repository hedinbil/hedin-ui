@using Brism
@attribute [Route(PageRoute.GettingStarted)]
@attribute [HUIPageSettings("Getting started", 0)]
@inject SeoService SeoService

@{
    var seoData = SeoService.GetPageSeoData(
        "Getting Started",
        "Learn how to get started with Hedin UI - installation, setup, and your first component. Complete guide to building Blazor applications with Hedin UI.",
        "getting started, blazor tutorial, hedin ui installation, blazor setup, mudblazor getting started"
    );
}

<SeoHead SeoData="@seoData" IncludeStructuredData="true" />

@inject MarkdownReader mdReader

<HUIPage Header="Getting started" PageDescription="This page does not represent the design of Hedin.UI.">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudPaper Class="pa-3">
            <MudMarkdown Value="@mdReader.GettingStartedText" CodeBlockTheme="cbTheme"></MudMarkdown>
        </MudPaper>
    </MudContainer>
</HUIPage>

@code {
    [CascadingParameter(Name = "DarkMode")] public bool DarkMode { get; set; }
    private CodeBlockTheme cbTheme => !DarkMode ? CodeBlockTheme.AtomOneLight : CodeBlockTheme.AtomOneDark;
}