@using Brism
@using Hedin.UI.Demo.Helpers
@attribute [Route(PageRoute.GettingStarted)]
@attribute [HUIPageSettings("Getting started", 0)]
@attribute [SeoMetadata(
    Title = "Getting Started - Hedin UI",
    Description = "Learn how to get started with Hedin UI. Install and configure the Blazor component library in minutes.",
    Keywords = "Hedin UI, Getting Started, Blazor, Installation, Setup, Tutorial",
    Type = "article"
)]

@inject MarkdownReader mdReader

<HUIPage Header="Getting started" PageDescription="This page does not represent the design of Hedin.UI.">
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudPaper Class="pa-3">
            <MudMarkdown Value="@mdReader.GettingStartedText" Styling="_styling"></MudMarkdown>
        </MudPaper>
    </MudContainer>
</HUIPage>

@code {
    [CascadingParameter(Name = "DarkMode")] public bool DarkMode { get; set; }

    private MudMarkdownStyling _styling => new()
    {
        CodeBlock =
        {
            Theme = !DarkMode ? CodeBlockTheme.AtomOneLight : CodeBlockTheme.AtomOneDark,
        },
    };

}