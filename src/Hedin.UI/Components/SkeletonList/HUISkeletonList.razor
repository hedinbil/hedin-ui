@namespace Hedin.UI

@for (int i = 0; i < Count; i++)
{
    <MudSkeleton SkeletonType="@SkeletonType.Rectangle" Height="@Height" Width="@Width" Class="@Class"></MudSkeleton>
}

@code {
    [Parameter] public int Count { get; set; } = 8;
    [Parameter] public string Height { get; set; } = "40px";
    [Parameter] public string Width { get; set; } = "";
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public SkeletonType SkeletonType { get; set; } = SkeletonType.Rectangle;
}