@namespace Hedin.UI

<span class="d-flex gap-2 align-center">
    <MudIcon Class="@("mud-" + Severity.ToDescriptionString() + "-text")" Size="Size.Small" Icon="@Icons.Material.Filled.Circle" Style="width: 0.5rem; height: 0.5rem;" />
    @ChildContent
</span>


@code {
    /// <summary>
    /// The severity level that determines the visual appearance of the status chip.
    /// Affects the color and styling of the status indicator.
    /// </summary>
    [Parameter] public Severity Severity { get; set; } = Severity.Normal;
    
    /// <summary>
    /// The content to display alongside the status indicator.
    /// Typically contains text describing the status.
    /// </summary>
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
